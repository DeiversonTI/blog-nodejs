<%- include('../../partials/header.ejs')%>
    <%- include('../../partials/navbar.ejs')%>

        <body>
            <div class="container">
                <br>
                <div class="card">
                    <div class="card-header">
                        <h2>Editar Artigos</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/articles/update">
                            <label>Título do Artigo</label>
                            <input type="hidden" value="<%= article.id %>" name="id"  >
                            <input class="form-control" type="text" name="title" placeholder="Defina o título"  value="<%= article.title %>"><br>
                            <textarea class="form-control" name="body" placeholder="Escreva o artigo aqui!" id="article"><%- article.body%></textarea><br>
                            <label >Categorias</label>
                            <select name="category" class="form-control">
                                <% categories.forEach((category) => {%>
                                    <% if (category.id == article.categoryId) { %>
                                        <option value="<%= category.id%>" selected><%= category.title %></option>
                                    <% } else { %>
                                        <option value="<%= category.id%>"><%= category.title %></option>
                                    <% } %>
                                <% }) %>
                            </select><br>
                            <button class="btn btn-primary">Atualizar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div id="content" style="display: none ;">
                <%- article.body%>
            </div>
        </body>
        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            tinymce.init({
                language: "pt_BR",
                selector: "#article",
                plugins: [
                    'advlist',
                    'autolink',
                    'link',
                    'image',
                    'lists',
                    'preview',
                    'searchreplace',
                    'wordcount',
                    'fullscreen',
                    'insertdatetime',
                    'media',
                    'save',
                    'table',
                    'emoticons'
                ],
                init_instance_callback: () => {//pega o conteudo do id Content e trata aqui e envia para texarea
                    tinymce.get("article").setContent($("#content").html())
                }
            })
        </script>
